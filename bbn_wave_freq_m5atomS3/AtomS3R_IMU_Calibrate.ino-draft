static auto& disp = M5.Display;

static void ui_clear(uint16_t bg = TFT_BLACK) {
  disp.fillScreen(bg);
  disp.setTextWrap(true, true);
}

static void ui_title(const char* s) {
  disp.setTextColor(TFT_WHITE, TFT_BLACK);
  disp.setCursor(0, 0);
  disp.setTextSize(2);
  disp.println(s);
  disp.setTextSize(1);
  disp.println();
}

static void ui_line(const char* s) {
  disp.setTextColor(TFT_WHITE, TFT_BLACK);
  disp.println(s);
}

static void ui_progress_bar(const char* label, int done, int total) {
  if (total <= 0) total = 1;
  if (done < 0) done = 0;
  if (done > total) done = total;
  int w = disp.width() - 10;
  int x = 5;
  int y = disp.height() - 16;
  int h = 10;

  disp.fillRect(0, y - 14, disp.width(), 30, TFT_BLACK);
  disp.setCursor(0, y - 14);
  disp.setTextColor(TFT_CYAN, TFT_BLACK);
  disp.printf("%s %d/%d\n", label, done, total);

  disp.drawRect(x, y, w, h, TFT_DARKGREY);
  int fillw = (w - 2) * done / total;
  disp.fillRect(x + 1, y + 1, fillw, h - 2, TFT_GREEN);
}

static void ui_status_line_bottom(const char* s) {
  int y = disp.height() - 34;
  disp.fillRect(0, y, disp.width(), 34, TFT_BLACK);
  disp.setCursor(0, y);
  disp.setTextColor(TFT_YELLOW, TFT_BLACK);
  disp.println(s);
}

static bool cancel_requested_hold() {
  static uint32_t t_down = 0;
  M5.update();
  if (M5.BtnA.isPressed()) {
    if (t_down == 0) t_down = millis();
    if (millis() - t_down >= CANCEL_HOLD_MS) { t_down = 0; return true; }
  } else {
    t_down = 0;
  }
  return false;
}

static void show_message_wait(const char* title, const char* line1, const char* line2 = "", uint32_t ms = 6000) {
  ui_clear();
  ui_title(title);
  ui_line(line1);
  if (line2 && line2[0]) ui_line(line2);
  ui_line("");
  disp.setTextColor(TFT_WHITE, TFT_BLACK);
  disp.printf("Continuing in %lus...\n", (unsigned long)((ms + 999) / 1000));
  uint32_t t0 = millis();
  while (millis() - t0 < ms) { M5.update(); delay(10); }
}

static void show_message_btn(const char* title, const char* line1, const char* line2 = "") {
  ui_clear();
  ui_title(title);
  ui_line(line1);
  if (line2 && line2[0]) ui_line(line2);
  ui_line("");
  ui_line("Press BtnA");
  while (true) { M5.update(); if (M5.BtnA.wasPressed()) break; delay(10); }
}

static void countdown_reposition(const char* title, const char* msg, uint32_t ms) {
  ui_clear();
  ui_title(title);
  ui_line(msg);
  ui_line("");
  ui_line("No buttons needed.");
  ui_line("Sampling starts after this timer");
  ui_line("once the device is STILL.");

  uint32_t t0 = millis();
  uint32_t last_draw = 0;
  while (millis() - t0 < ms) {
    if (cancel_requested_hold()) return; // optional cancel
    uint32_t now = millis();
    if (now - last_draw > 100) {
      last_draw = now;
      uint32_t remain_ms = ms - (now - t0);
      uint32_t remain_s = (remain_ms + 999) / 1000;
      char buf[40];
      snprintf(buf, sizeof(buf), "Reposition: %lus left", (unsigned long)remain_s);
      ui_status_line_bottom(buf);
    }
    delay(10);
  }
}

// ----------------------------
// Sensor read + stillness gate
// ----------------------------
static bool read_sensors(Vector3f& a_raw_body, Vector3f& w_raw_body, Vector3f& m_raw_uT_body,
                         float& tempC, uint32_t& mask_out)
{
  mask_out = M5.Imu.update();
  if (!mask_out) return false;

  auto data = M5.Imu.getImuData();

  tempC = NAN;
  M5.Imu.getTemp(&tempC);

  a_raw_body    = map_acc_to_body_ned(data.accel);
  w_raw_body    = map_gyr_to_body_ned(data.gyro);
  m_raw_uT_body = map_mag_to_body_uT(data.mag);
  return true;
}

static bool is_still_enough(const Vector3f& a, const Vector3f& w, float& a_err_out, float& w_norm_out) {
  float a_mag = a.norm();
  float w_mag = w.norm();
  float a_err = fabsf(a_mag - g_std);

  a_err_out = a_err;
  w_norm_out = w_mag;

  return (w_mag <= STILL_GYRO_MAX_RAD_S) && (a_err <= STILL_ACCEL_ERR_MAX_MS2);
}

static bool wait_for_still_then_collect_accel(const char* face_short, int need, uint32_t timeout_ms) {
  ui_clear();
  ui_title("ACCEL SAMPLE");
  ui_line(face_short);
  ui_line("");
  ui_line("Waiting for STILLNESS...");
  ui_line("Hold BtnA = cancel");

  uint32_t t0 = millis();
  uint32_t still_start = 0;
  int accepted0 = accelCal.buf.n;

  while (millis() - t0 < timeout_ms) {
    if (cancel_requested_hold()) { set_fail(WizFail::CANCEL, face_short); return false; }

    Vector3f a, w, m;
    float tempC;
    uint32_t mask;
    if (!read_sensors(a, w, m, tempC, mask)) { delay(5); continue; }

    float a_err, w_norm;
    bool still = is_still_enough(a, w, a_err, w_norm);

    // draw a tiny live status
    {
      int y = 64;
      disp.fillRect(0, y, disp.width(), 52, TFT_BLACK);
      disp.setCursor(0, y);
      disp.setTextColor(TFT_WHITE, TFT_BLACK);
      disp.printf("|w|=%.3f rad/s (<= %.2f)\n", (double)w_norm, (double)STILL_GYRO_MAX_RAD_S);
      disp.printf("| |a|-g |=%.3f (<= %.2f)\n", (double)a_err, (double)STILL_ACCEL_ERR_MAX_MS2);
      disp.setTextColor(still ? TFT_GREEN : TFT_RED, TFT_BLACK);
      disp.println(still ? "STILL: YES" : "STILL: NO");
    }

    if (still) {
      if (still_start == 0) still_start = millis();
      if (millis() - still_start >= STILL_SETTLE_MS) {
        // Now we can feed calibrator (less rejection)
        accelCal.addSample(a, w, tempC);

        int accepted = accelCal.buf.n - accepted0;
        ui_progress_bar("Accepted", accepted, need);

        if (accepted >= need) return true;
      } else {
        ui_status_line_bottom("Hold still... (settling)");
      }
    } else {
      still_start = 0;
      ui_status_line_bottom("Move less / set it flatter");
    }

    delay(5);
  }

  // timeout
  int accepted = accelCal.buf.n - accepted0;
  if (accepted == 0) { set_fail(WizFail::FACE_ZERO_ACCEPT, face_short); }
  else { set_fail(WizFail::FACE_TIMEOUT, face_short); }
  return false;
}

static bool wait_for_still_then_collect_gyro(uint32_t timeout_ms) {
  ui_clear();
  ui_title("GYRO SAMPLE");
  ui_line("DISPLAY UP on table");
  ui_line("Do NOT touch it.");
  ui_line("Hold BtnA = cancel");

  uint32_t t0 = millis();
  uint32_t still_start = 0;
  int accepted0 = gyroCal.buf.n;

  while (millis() - t0 < timeout_ms) {
    if (cancel_requested_hold()) { set_fail(WizFail::CANCEL, "GYRO"); return false; }

    Vector3f a, w, m;
    float tempC;
    uint32_t mask;
    if (!read_sensors(a, w, m, tempC, mask)) { delay(5); continue; }

    float a_err, w_norm;
    bool still = is_still_enough(a, w, a_err, w_norm);

    // UI
    {
      int y = 64;
      disp.fillRect(0, y, disp.width(), 52, TFT_BLACK);
      disp.setCursor(0, y);
      disp.setTextColor(TFT_WHITE, TFT_BLACK);
      disp.printf("|w|=%.3f rad/s\n", (double)w_norm);
      disp.printf("| |a|-g |=%.3f\n", (double)a_err);
      disp.setTextColor(still ? TFT_GREEN : TFT_RED, TFT_BLACK);
      disp.println(still ? "STILL: YES" : "STILL: NO");
    }

    if (still) {
      if (still_start == 0) still_start = millis();
      if (millis() - still_start >= STILL_SETTLE_MS) {
        gyroCal.addSample(w, a, tempC);
        int accepted = gyroCal.buf.n - accepted0;
        ui_progress_bar("Accepted", accepted, 200);
        if (accepted >= 200) return true;
      } else {
        ui_status_line_bottom("Hold still... (settling)");
      }
    } else {
      still_start = 0;
      ui_status_line_bottom("Waiting for stillness");
    }

    delay(5);
  }

  set_fail(WizFail::GYRO_TIMEOUT, "GYRO");
  return false;
}

static bool collect_mag_samples(uint32_t timeout_ms, bool& mag_present_out) {
  ui_clear();
  ui_title("MAG SAMPLE");
  ui_line("Rotate slowly:");
  ui_line("big loops / figure-8");
  ui_line("Hold BtnA = cancel");

  // Detect magnetometer presence
  mag_present_out = false;
  {
    uint32_t t0 = millis();
    while (millis() - t0 < 2500) {
      if (cancel_requested_hold()) { set_fail(WizFail::CANCEL, "MAG"); return false; }

      Vector3f a, w, m;
      float tempC;
      uint32_t mask;
      if (!read_sensors(a, w, m, tempC, mask)) { delay(5); continue; }
      if (mask & (uint32_t)M5_IMU::sensor_mask_mag) {
        mag_present_out = true;
        break;
      }
      delay(5);
    }
  }

  if (!mag_present_out) {
    show_message_wait("MAG", "No magnetometer detected.", "Skipping mag calibration.", 5000);
    return true; // not an error; we skip
  }

  uint32_t t0 = millis();
  int accepted0 = magCal.buf.n;

  while (millis() - t0 < timeout_ms) {
    if (cancel_requested_hold()) { set_fail(WizFail::CANCEL, "MAG"); return false; }

    Vector3f a, w, m;
    float tempC;
    uint32_t mask;
    if (!read_sensors(a, w, m, tempC, mask)) { delay(5); continue; }

    if (mask & (uint32_t)M5_IMU::sensor_mask_mag) magCal.addSample(m);

    int accepted = magCal.buf.n - accepted0;
    ui_progress_bar("Accepted", accepted, 250);
    if (accepted >= 250) return true;

    delay(5);
  }

  set_fail(WizFail::MAG_TIMEOUT, "MAG");
  return false;
}

