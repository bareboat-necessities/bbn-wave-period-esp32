static bool wizard_intro() {
  ui_clear();
  ui_title("IMU CAL WIZARD");
  ui_line("You will do 6 accel poses,");
  ui_line("then gyro, then (if present) mag.");
  ui_line("");
  ui_line("IMPORTANT:");
  ui_line("- UNPLUG USB cable for USB-C DOWN pose");
  ui_line("- Use flat surface, avoid wobble");
  ui_line("");
  ui_line("Press BtnA to begin");
  while (true) { M5.update(); if (M5.BtnA.wasPressed()) return true; delay(10); }
}

static bool run_calibration_wizard() {
  g_last_fail = WizFail::NONE;
  g_last_fail_detail[0] = 0;

  // wipe M5 offsets & disable M5 internal offset influence
  M5.Imu.setCalibration(0, 0, 0);
  M5.Imu.clearOffsetData();

  accelCal.clear();
  gyroCal.clear();
  magCal.clear();

  if (!wizard_intro()) return false;

  // Face instructions: plain English, no “flip” jargon
  struct FaceStep { const char* setup; const char* shortname; const char* tip; };
  const FaceStep faces[6] = {
    { "POSE 1/6: DISPLAY UP\n(screen facing up)\nPlace on a flat table.", "1/6 DISPLAY UP", "" },
    { "POSE 2/6: DISPLAY DOWN\n(screen on table)\n(no buttons needed)",   "2/6 DISPLAY DOWN", "" },
    { "POSE 3/6: USB-C DOWN\n(port toward table)\nUNPLUG USB cable!",     "3/6 USB-C DOWN", "Tip: use 2 coins as spacers so it doesn't wobble." },
    { "POSE 4/6: USB-C UP\n(port toward ceiling)\nPlace on flat table.",  "4/6 USB-C UP", "" },
    { "POSE 5/6: LEFT SIDE DOWN\n(when screen is upright,\nleft edge touches table)", "5/6 LEFT DOWN", "" },
    { "POSE 6/6: RIGHT SIDE DOWN\n(when screen is upright,\nright edge touches table)", "6/6 RIGHT DOWN", "" },
  };

  // Per-face: give time to reposition, then wait for stillness, then collect accepted samples
  for (int i = 0; i < 6; ++i) {
    countdown_reposition("ACCEL POSE", faces[i].setup, REPOSITION_MS);
    if (faces[i].tip && faces[i].tip[0]) show_message_wait("TIP", faces[i].tip, "", 6000);

    bool ok = wait_for_still_then_collect_accel(faces[i].shortname, ACC_FACE_NEED, ACCEL_FACE_TIMEOUT_MS);
    if (!ok) {
      // show a clear failure screen
      ui_clear();
      ui_title("ACCEL FAILED");
      disp.printf("Reason: %s\n", wizFailStr(g_last_fail));
      disp.printf("Detail: %s\n\n", g_last_fail_detail);
      ui_line("Common fixes:");
      ui_line("- Make it flatter / less wobble");
      ui_line("- Unplug USB for USB-C DOWN");
      ui_line("- Wait until STILL: YES");
      show_message_btn("ACCEL FAILED", "Press BtnA to return");
      return false;
    }

    show_message_wait("CAPTURED", faces[i].shortname, "Reposition for next pose...", 2500);
  }

  // Fit accel
  imu_cal::AccelCalibration<float> acc_out;
  if (!accelCal.fit(acc_out, /*robust_iters=*/3, /*trim_frac=*/0.15f) || !acc_out.ok) {
    set_fail(WizFail::ACC_FIT_FAIL, "accelCal.fit");
    show_message_btn("ACC FIT FAIL", "Not enough coverage / too noisy.", "Press BtnA");
    return false;
  }

  // Gyro step
  countdown_reposition("GYRO SETUP", "Place DISPLAY UP on table.\nDo NOT touch it.", REPOSITION_MS);
  if (!wait_for_still_then_collect_gyro(GYRO_TIMEOUT_MS)) {
    show_message_btn("GYRO FAILED", wizFailStr(g_last_fail), g_last_fail_detail);
    return false;
  }

  imu_cal::GyroCalibration<float> gyr_out;
  if (!gyroCal.fit(gyr_out) || !gyr_out.ok) {
    set_fail(WizFail::GYRO_FIT_FAIL, "gyroCal.fit");
    show_message_btn("GYRO FIT FAIL", "Was it moving / vibrating?", "Press BtnA");
    return false;
  }

  // Mag step (optional)
  bool mag_present = false;
  countdown_reposition("MAG SETUP", "Pick up device.\nRotate slowly in big loops.", 5000);
  if (!collect_mag_samples(MAG_TIMEOUT_MS, mag_present)) {
    show_message_btn("MAG FAILED", wizFailStr(g_last_fail), g_last_fail_detail);
    return false;
  }

  imu_cal::MagCalibration<float> mag_out;
  if (mag_present) {
    if (!magCal.fit(mag_out, /*robust_iters=*/3, /*trim_frac=*/0.15f) || !mag_out.ok) {
      set_fail(WizFail::MAG_FIT_FAIL, "magCal.fit");
      show_message_btn("MAG FIT FAIL", "Rotate longer/wider, away from metal.", "Press BtnA");
      return false;
    }
  } else {
    // mark as skipped
    memset(&mag_out, 0, sizeof(mag_out));
    mag_out.ok = false;
  }

  // Build blob (memset avoids padding/CRC weirdness)
  CalBlobV1 blob;
  memset(&blob, 0, sizeof(blob));
  blob.magic = IMU_CAL_MAGIC;
  blob.version = IMU_CAL_VERSION;
  blob.size_bytes = sizeof(CalBlobV1);

  // accel
  blob.accel_ok = acc_out.ok ? 1 : 0;
  blob.accel_g  = acc_out.g;
  mat_to_rowmajor9(acc_out.S, blob.accel_S);
  blob.accel_T0 = acc_out.biasT.T0;
  blob.accel_b0[0]=acc_out.biasT.b0.x(); blob.accel_b0[1]=acc_out.biasT.b0.y(); blob.accel_b0[2]=acc_out.biasT.b0.z();
  blob.accel_k[0]=acc_out.biasT.k.x();   blob.accel_k[1]=acc_out.biasT.k.y();   blob.accel_k[2]=acc_out.biasT.k.z();
  blob.accel_rms_mag = acc_out.rms_mag;

  // gyro
  blob.gyro_ok = gyr_out.ok ? 1 : 0;
  blob.gyro_T0 = gyr_out.biasT.T0;
  blob.gyro_b0[0]=gyr_out.biasT.b0.x(); blob.gyro_b0[1]=gyr_out.biasT.b0.y(); blob.gyro_b0[2]=gyr_out.biasT.b0.z();
  blob.gyro_k[0]=gyr_out.biasT.k.x();   blob.gyro_k[1]=gyr_out.biasT.k.y();   blob.gyro_k[2]=gyr_out.biasT.k.z();

  // mag (optional)
  blob.mag_ok = (mag_present && mag_out.ok) ? 1 : 0;
  if (blob.mag_ok) {
    mat_to_rowmajor9(mag_out.A, blob.mag_A);
    blob.mag_b[0]=mag_out.b.x(); blob.mag_b[1]=mag_out.b.y(); blob.mag_b[2]=mag_out.b.z();
    blob.mag_field_uT = mag_out.field_uT;
    blob.mag_rms = mag_out.rms;
  }

  if (!save_cal_to_nvs(blob)) {
    set_fail(WizFail::SAVE_FAIL, "putBytes failed");
    show_message_btn("SAVE FAIL", "NVS write failed.", "Press BtnA");
    return false;
  }

  // Read back immediately to verify
  have_blob = load_cal_from_nvs();
  if (!have_blob) {
    set_fail(WizFail::READBACK_FAIL, "readback CRC/size");
    show_message_btn("SAVE FAIL", "Saved but readback failed.", "Press BtnA");
    return false;
  }

  // Show results clearly
  ui_clear();
  ui_title("CAL DONE");
  disp.setTextColor(TFT_WHITE, TFT_BLACK);
  disp.printf("BLOB: YES\n");
  disp.printf("ACC ok:%d  rms|g|:%.4f\n", (int)g_acc_cal.ok, (double)g_acc_cal.rms_mag);
  disp.printf("GYR ok:%d\n", (int)g_gyr_cal.ok);
  disp.printf("MAG ok:%d\n", (int)g_mag_cal.ok);
  disp.println();
  ui_line("Press BtnA to return");
  while (true) { M5.update(); if (M5.BtnA.wasPressed()) break; delay(10); }

  return true;
}

// ----------------------------
// Status + erase UI
// ----------------------------
static void draw_status() {
  ui_clear();
  ui_title("IMU CAL STATUS");

  disp.setTextColor(TFT_WHITE, TFT_BLACK);
  disp.printf("BLOB: %s\n", have_blob ? "YES" : "NO");
  disp.printf("ACC ok:%d  GYR ok:%d  MAG ok:%d\n", (int)g_acc_cal.ok, (int)g_gyr_cal.ok, (int)g_mag_cal.ok);
  disp.println();

  disp.printf("LAST: %s\n", wizFailStr(g_last_fail));
  if (g_last_fail_detail[0]) disp.printf("  %s\n", g_last_fail_detail);

  disp.println();
  ui_line("Short press BtnA: start wizard");
  ui_line("Hold BtnA 6s: erase saved cal");
  ui_line("(erase asks for confirmation)");
}

static bool request_erase_longhold() {
  if (millis() < ignore_erase_until_ms) return false;

  static uint32_t t_down = 0;
  M5.update();

  if (M5.BtnA.isPressed()) {
    if (t_down == 0) t_down = millis();

    uint32_t held = millis() - t_down;
    uint32_t remain = (held >= ERASE_HOLD_MS) ? 0 : (ERASE_HOLD_MS - held);
    char buf[48];
    snprintf(buf, sizeof(buf), "Hold to erase: %lus", (unsigned long)((remain + 999) / 1000));
    ui_status_line_bottom(buf);

    if (held >= ERASE_HOLD_MS) {
      t_down = 0;
      return true;
    }
  } else {
    t_down = 0;
  }
  return false;
}

static bool confirm_erase_screen() {
  ui_clear();
  ui_title("ERASE CAL?");
  ui_line("This deletes saved calibration.");
  ui_line("");
  ui_line("Press BtnA = CONFIRM");
  ui_line("Wait 8s = cancel");

  uint32_t t0 = millis();
  while (millis() - t0 < 8000) {
    M5.update();
    if (M5.BtnA.wasPressed()) return true;
    delay(10);
  }
  return false;
}

// ----------------------------
// Arduino entry points
// ----------------------------
void setup() {
  auto cfg = M5.config();
  M5.begin(cfg);
  Serial.begin(115200);

  // disable M5 internal calibration offsets (we apply ours)
  M5.Imu.setCalibration(0, 0, 0);

  have_blob = load_cal_from_nvs();
  ignore_erase_until_ms = millis() + ERASE_GUARD_MS;
  draw_status();

  if (!M5.Imu.isEnabled()) {
    ui_clear();
    ui_title("IMU FAIL");
    ui_line("IMU not found.");
    while (true) delay(100);
  }
}

void loop() {
  M5.update();

  // erase flow
  if (request_erase_longhold()) {
    if (confirm_erase_screen()) {
      ui_clear();
      ui_title("ERASING...");
      erase_our_cal_from_nvs();
      M5.Imu.clearOffsetData();

      have_blob = false;
      memset(&cal_blob, 0, sizeof(cal_blob));
      rebuild_runtime_cals_from_blob();

      ignore_erase_until_ms = millis() + ERASE_GUARD_MS;
      show_message_wait("DONE", "Calibration erased.", "", 1200);
    }
    draw_status();
  }

  // start wizard (short press)
  if (M5.BtnA.wasPressed()) {
    // If user is holding, we don't want to instantly treat it as erase; wizard starts on short press.
    ignore_erase_until_ms = millis() + ERASE_GUARD_MS;

    bool ok = run_calibration_wizard();
    (void)ok;

    have_blob = load_cal_from_nvs();
    ignore_erase_until_ms = millis() + ERASE_GUARD_MS;
    draw_status();
  }

  // live debug print (raw + calibrated)
  Vector3f a_raw, w_raw, m_raw;
  float tempC;
  uint32_t mask;
  if (read_sensors(a_raw, w_raw, m_raw, tempC, mask)) {
    Vector3f a_cal = applyAccel(a_raw, tempC);
    Vector3f w_cal = applyGyro(w_raw, tempC);
    Vector3f m_cal = applyMag(m_raw);

    uint32_t now = millis();
    if (now - last_print_ms > 200) {
      last_print_ms = now;

      Serial.printf("tempC:%.2f,", (double)tempC);

      Serial.printf("a_raw:%+.4f,%+.4f,%+.4f,",
        (double)a_raw.x(), (double)a_raw.y(), (double)a_raw.z());
      Serial.printf("a_cal:%+.4f,%+.4f,%+.4f,|a|:%.4f,",
        (double)a_cal.x(), (double)a_cal.y(), (double)a_cal.z(), (double)a_cal.norm());

      Serial.printf("w_raw:%+.5f,%+.5f,%+.5f,",
        (double)w_raw.x(), (double)w_raw.y(), (double)w_raw.z());
      Serial.printf("w_cal:%+.5f,%+.5f,%+.5f,",
        (double)w_cal.x(), (double)w_cal.y(), (double)w_cal.z());

      Serial.printf("m_raw:%+.2f,%+.2f,%+.2f,",
        (double)m_raw.x(), (double)m_raw.y(), (double)m_raw.z());
      Serial.printf("m_cal:%+.2f,%+.2f,%+.2f,|m|:%.2f",
        (double)m_cal.x(), (double)m_cal.y(), (double)m_cal.z(), (double)m_cal.norm());

      Serial.println();
    }
  }

  delay(5);
}
