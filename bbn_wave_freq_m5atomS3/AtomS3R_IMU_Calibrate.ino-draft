class Beeper {
public:
  static void begin() {
    M5.Speaker.begin();
    M5.Speaker.setVolume(ImuCalCfg::BEEP_VOLUME);
  }
  static void ok()  { tone_(2200, 55); }
  static void bad() { tone_( 400, 120); }

private:
  static void tone_(uint16_t hz, uint16_t ms) {
    M5.Speaker.tone(hz, ms);
    delay(ms);
    M5.Speaker.stop();
  }
};

