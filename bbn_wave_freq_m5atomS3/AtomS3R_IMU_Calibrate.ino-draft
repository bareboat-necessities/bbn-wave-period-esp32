static uint32_t ignore_erase_until_ms = 0;
static uint32_t last_print_ms = 0;

static void draw_status() {
  ui_clear();
  ui_title("IMU CAL");

  disp.setTextColor(TFT_WHITE, TFT_BLACK);
  disp.printf("BLOB: %s\n", have_blob ? "YES" : "NO");
  disp.printf("ACC ok:%d  GYR ok:%d  MAG ok:%d\n",
              (int)g_acc_cal.ok, (int)g_gyr_cal.ok, (int)g_mag_cal.ok);

  disp.println();
  disp.println("BtnA: calibrate");
  disp.println("Erase: hold BtnA 4s");
  disp.println("(then confirm)");
  disp.println();
  disp.println();
}

static bool request_erase_longhold() {
  if (millis() < ignore_erase_until_ms) return false;

  static uint32_t t_down = 0;
  M5.update();

  if (M5.BtnA.isPressed()) {
    if (t_down == 0) t_down = millis();

    uint32_t held = millis() - t_down;
    if (held >= ERASE_HOLD_MS) {
      t_down = 0;
      return true;
    }

    // Optional: show a tiny hold progress
    int y = disp.height() - 36;
    disp.fillRect(0, y, disp.width(), 36, TFT_BLACK);
    disp.setCursor(0, y);
    disp.setTextColor(TFT_YELLOW, TFT_BLACK);
    disp.printf("Hold to erase: %lus\n", (unsigned long)((ERASE_HOLD_MS - held + 999) / 1000));
    disp.setTextColor(TFT_WHITE, TFT_BLACK);
    disp.println("Release to cancel");
  } else {
    t_down = 0;
  }

  return false;
}

static bool confirm_erase_screen() {
  ui_clear();
  ui_title("ERASE?");
  ui_line("This will delete");
  ui_line("saved calibration.");
  ui_line("");
  ui_line("BtnA = CONFIRM");
  ui_line("Wait 5s = cancel");

  uint32_t t0 = millis();
  while (millis() - t0 < 5000) {
    M5.update();
    if (M5.BtnA.wasPressed()) return true;
    delay(10);
  }
  return false;
}

void setup() {
  auto cfg = M5.config();
  M5.begin(cfg);
  Serial.begin(115200);

  M5.Imu.setCalibration(0, 0, 0);

  have_blob = load_cal_from_nvs();
  ignore_erase_until_ms = millis() + ERASE_GUARD_MS;
  draw_status();

  if (!M5.Imu.isEnabled()) {
    ui_clear();
    ui_title("IMU FAIL");
    ui_line("IMU not found.");
    while (true) delay(100);
  }
}

void loop() {
  M5.update();

  // Erase flow (guarded + confirm)
  if (request_erase_longhold()) {
    if (confirm_erase_screen()) {
      ui_clear();
      ui_title("ERASING...");
      erase_our_cal_from_nvs();
      M5.Imu.clearOffsetData();

      have_blob = false;
      memset(&cal_blob, 0, sizeof(cal_blob));
      rebuild_runtime_cals_from_blob();

      ignore_erase_until_ms = millis() + ERASE_GUARD_MS;
      ui_line("Done.");
      delay(800);
    }
    draw_status();
  }

  // Run wizard
  if (M5.BtnA.wasPressed()) {
    bool ok = run_calibration_wizard();
    (void)ok;
    have_blob = load_cal_from_nvs();              // refresh (in case)
    ignore_erase_until_ms = millis() + ERASE_GUARD_MS; // prevent immediate erase
    draw_status();
  }

  // Live read / print
  Vector3f a_raw, w_raw, m_raw;
  float tempC;
  uint32_t mask;
  if (read_sensors(a_raw, w_raw, m_raw, tempC, mask)) {
    Vector3f a_cal = applyAccel(a_raw, tempC);
    Vector3f w_cal = applyGyro(w_raw, tempC);
    Vector3f m_cal = applyMag(m_raw);

    uint32_t now = millis();
    if (now - last_print_ms > 200) {
      last_print_ms = now;

      Serial.printf("tempC:%.2f,", (double)tempC);

      Serial.printf("a_raw:%+.4f,%+.4f,%+.4f,",
        (double)a_raw.x(), (double)a_raw.y(), (double)a_raw.z());
      Serial.printf("a_cal:%+.4f,%+.4f,%+.4f,|a|:%.4f,",
        (double)a_cal.x(), (double)a_cal.y(), (double)a_cal.z(), (double)a_cal.norm());

      Serial.printf("w_raw:%+.5f,%+.5f,%+.5f,",
        (double)w_raw.x(), (double)w_raw.y(), (double)w_raw.z());
      Serial.printf("w_cal:%+.5f,%+.5f,%+.5f,",
        (double)w_cal.x(), (double)w_cal.y(), (double)w_cal.z());

      Serial.printf("m_raw:%+.2f,%+.2f,%+.2f,",
        (double)m_raw.x(), (double)m_raw.y(), (double)m_raw.z());
      Serial.printf("m_cal:%+.2f,%+.2f,%+.2f,|m|:%.2f",
        (double)m_cal.x(), (double)m_cal.y(), (double)m_cal.z(), (double)m_cal.norm());

      Serial.println();
    }
  }

  delay(5);
}
