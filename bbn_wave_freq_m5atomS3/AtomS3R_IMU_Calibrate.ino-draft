static auto& disp = M5.Display;

static void ui_clear(uint16_t bg = TFT_BLACK) { disp.fillScreen(bg); }

static void ui_title(const char* s) {
  disp.setTextColor(TFT_WHITE, TFT_BLACK);
  disp.setCursor(0, 0);
  disp.setTextSize(2);
  disp.println(s);
  disp.setTextSize(1);
  disp.println();
}

static void ui_line(const char* s) {
  disp.setTextColor(TFT_WHITE, TFT_BLACK);
  disp.println(s);
}

static void ui_progress(const char* label, int done, int total) {
  if (total <= 0) total = 1;
  if (done < 0) done = 0;
  if (done > total) done = total;
  int w = disp.width() - 10;
  int x = 5;
  int y = disp.height() - 18;
  int h = 10;
  disp.fillRect(0, y - 14, disp.width(), 32, TFT_BLACK);
  disp.setCursor(0, y - 14);
  disp.setTextColor(TFT_CYAN, TFT_BLACK);
  disp.printf("%s %d/%d\n", label, done, total);
  disp.drawRect(x, y, w, h, TFT_DARKGREY);
  int fillw = (w - 2) * done / total;
  disp.fillRect(x + 1, y + 1, fillw, h - 2, TFT_GREEN);
}

static bool cancel_requested() {
  static uint32_t t_down = 0;
  M5.update();
  if (M5.BtnA.isPressed()) {
    if (t_down == 0) t_down = millis();
    if (millis() - t_down >= CANCEL_HOLD_MS) { t_down = 0; return true; }
  } else {
    t_down = 0;
  }
  return false;
}

static bool countdown_to_start(const char* title, const char* msg, uint32_t ms) {
  ui_clear();
  ui_title(title);
  ui_line(msg);
  ui_line("");
  ui_line("Auto-start soon...");
  ui_line("BtnA = start now");
  ui_line("Hold BtnA = cancel");

  uint32_t t0 = millis();
  uint32_t last_draw = 0;

  while (true) {
    M5.update();
    if (M5.BtnA.wasPressed()) return true;
    if (cancel_requested()) return false;

    uint32_t now = millis();
    if (now - last_draw > 100) {
      last_draw = now;
      uint32_t elapsed = now - t0;
      if (elapsed >= ms) return true;

      uint32_t remain_ms = ms - elapsed;
      uint32_t remain_s = (remain_ms + 999) / 1000;

      int y = disp.height() - 36;
      disp.fillRect(0, y, disp.width(), 36, TFT_BLACK);
      disp.setCursor(0, y);
      disp.setTextColor(TFT_YELLOW, TFT_BLACK);
      disp.printf("Starting in %lus\n", (unsigned long)remain_s);
      disp.setTextColor(TFT_WHITE, TFT_BLACK);
      disp.println("Hold still when placed.");
    }
    delay(10);
  }
}

static void show_msg_wait_btn(const char* title, const char* line1, const char* line2 = "") {
  ui_clear();
  ui_title(title);
  ui_line(line1);
  if (line2 && line2[0]) ui_line(line2);
  ui_line("");
  ui_line("BtnA = continue");
  while (true) {
    M5.update();
    if (M5.BtnA.wasPressed()) break;
    delay(10);
  }
}

static void show_captured(const char* what) {
  ui_clear();
  ui_title("OK");
  ui_line(what);
  ui_line("Captured.");
  delay(BETWEEN_STEP_PAUSE_MS);
}

// ----------------------------
// Calibrators & sensors
// ----------------------------
static imu_cal::AccelCalibrator<float, 400, 8> accelCal;
static imu_cal::GyroCalibrator<float, 400, 8>  gyroCal;
static imu_cal::MagCalibrator<float, 400>      magCal;

static bool read_sensors(Vector3f& a_raw_body, Vector3f& w_raw_body, Vector3f& m_raw_uT_body,
                         float& tempC, uint32_t& mask_out)
{
  mask_out = M5.Imu.update();
  if (!mask_out) return false;

  auto data = M5.Imu.getImuData();
  tempC = NAN;
  M5.Imu.getTemp(&tempC);

  a_raw_body    = map_acc_to_body_ned(data.accel);
  w_raw_body    = map_gyr_to_body_ned(data.gyro);
  m_raw_uT_body = map_mag_to_body_uT(data.mag);
  return true;
}

static bool collect_accel_samples(const char* face_label, int need, uint32_t timeout_ms) {
  ui_clear();
  ui_title("ACCEL");
  ui_line(face_label);
  ui_line("");
  ui_line("Hold still.");
  ui_line("Hold BtnA=cancel");

  uint32_t t0 = millis();
  int got0 = accelCal.buf.n;

  while ((millis() - t0) < timeout_ms) {
    if (cancel_requested()) return false;

    Vector3f a, w, m;
    float tempC;
    uint32_t mask;
    if (!read_sensors(a, w, m, tempC, mask)) { delay(2); continue; }

    accelCal.addSample(a, w, tempC);

    int got = accelCal.buf.n - got0;
    ui_progress("Samples", got, need);
    if (got >= need) return true;

    delay(5);
  }

  show_msg_wait_btn("TIMEOUT", "Accel step timed out.", "Try steadier hold.");
  return false;
}

static bool collect_gyro_samples(uint32_t timeout_ms) {
  ui_clear();
  ui_title("GYRO");
  ui_line("DISPLAY UP on table.");
  ui_line("Do NOT touch it.");
  ui_line("Hold BtnA=cancel");

  uint32_t t0 = millis();
  int got0 = gyroCal.buf.n;

  while ((millis() - t0) < timeout_ms) {
    if (cancel_requested()) return false;

    Vector3f a, w, m;
    float tempC;
    uint32_t mask;
    if (!read_sensors(a, w, m, tempC, mask)) { delay(2); continue; }

    gyroCal.addSample(w, a, tempC);

    int got = gyroCal.buf.n - got0;
    ui_progress("Samples", got, 200);
    if (got >= 200) return true;

    delay(5);
  }

  show_msg_wait_btn("TIMEOUT", "Gyro step timed out.", "Was it moving?");
  return false;
}

static bool collect_mag_samples(uint32_t timeout_ms) {
  ui_clear();
  ui_title("MAG");
  ui_line("Rotate slowly:");
  ui_line("big loops / figure-8");
  ui_line("Hold BtnA=cancel");

  uint32_t t0 = millis();
  int got0 = magCal.buf.n;

  while ((millis() - t0) < timeout_ms) {
    if (cancel_requested()) return false;

    Vector3f a, w, m;
    float tempC;
    uint32_t mask;
    if (!read_sensors(a, w, m, tempC, mask)) { delay(2); continue; }

    if (mask & (uint32_t)M5_IMU::sensor_mask_mag) magCal.addSample(m);

    int got = magCal.buf.n - got0;
    ui_progress("Samples", got, 250);
    if (got >= 250) return true;

    delay(5);
  }

  show_msg_wait_btn("TIMEOUT", "Mag step timed out.", "Rotate longer/wider.");
  return false;
}

static void show_fit_results(const imu_cal::AccelCalibration<float>& ac,
                             const imu_cal::GyroCalibration<float>&  gc,
                             const imu_cal::MagCalibration<float>&   mc)
{
  ui_clear();
  ui_title("CAL DONE");
  disp.setTextColor(TFT_WHITE, TFT_BLACK);
  disp.printf("ACC ok:%d rms|g|:%.4f\n", (int)ac.ok, (double)ac.rms_mag);
  disp.printf("GYR ok:%d\n", (int)gc.ok);
  disp.printf("MAG ok:%d B:%.1f uT rms:%.2f\n", (int)mc.ok, (double)mc.field_uT, (double)mc.rms);
  disp.println();
  disp.println("Press BtnA to return");
  while (true) { M5.update(); if (M5.BtnA.wasPressed()) break; delay(10); }
}

static bool wizard_intro() {
  ui_clear();
  ui_title("IMU CAL");
  ui_line("6 accel poses + gyro + mag.");
  ui_line("Auto-start countdown each step.");
  ui_line("Hold BtnA=cancel step.");
  ui_line("");
  ui_line("BtnA=begin");
  while (true) { M5.update(); if (M5.BtnA.wasPressed()) return true; delay(10); }
}

// ----------------------------
// Wizard
// ----------------------------
static bool run_calibration_wizard() {
  // wipe M5 offsets + disable M5 internal calibration influence
  M5.Imu.setCalibration(0, 0, 0);
  M5.Imu.clearOffsetData();

  accelCal.clear();
  gyroCal.clear();
  magCal.clear();

  if (!wizard_intro()) return false;

  const struct {
    const char* setup_msg;
    const char* short_label;
  } faces[6] = {
    {"FACE 1/6:\nDISPLAY UP\n(screen facing up)",          "Face 1/6: DISPLAY UP"},
    {"FACE 2/6:\nDISPLAY DOWN\n(screen on table)",         "Face 2/6: DISPLAY DOWN"},
    {"FACE 3/6:\nUSB-C DOWN\n(port on table)",             "Face 3/6: USB-C DOWN"},
    {"FACE 4/6:\nUSB-C UP\n(port to ceiling)",             "Face 4/6: USB-C UP"},
    {"FACE 5/6:\nLEFT EDGE DOWN\n(when screen faces you)", "Face 5/6: LEFT EDGE DOWN"},
    {"FACE 6/6:\nRIGHT EDGE DOWN\n(when screen faces you)","Face 6/6: RIGHT EDGE DOWN"},
  };

  for (int i = 0; i < 6; ++i) {
    if (!countdown_to_start("ACCEL SETUP", faces[i].setup_msg, STEP_COUNTDOWN_MS)) return false;
    if (!collect_accel_samples(faces[i].short_label, /*need=*/60, ACCEL_FACE_TIMEOUT_MS)) return false;
    show_captured(faces[i].short_label);
  }

  imu_cal::AccelCalibration<float> acc_out;
  if (!accelCal.fit(acc_out, /*robust_iters=*/3, /*trim_frac=*/0.15f)) {
    show_msg_wait_btn("ACCEL FAIL", "Fit failed.", "Try steadier holds.");
    return false;
  }

  if (!countdown_to_start("GYRO SETUP", "Place DISPLAY UP on table.\nDon't touch it.", STEP_COUNTDOWN_MS)) return false;
  if (!collect_gyro_samples(GYRO_TIMEOUT_MS)) return false;

  imu_cal::GyroCalibration<float> gyr_out;
  if (!gyroCal.fit(gyr_out)) {
    show_msg_wait_btn("GYRO FAIL", "Fit failed.", "Try more stillness.");
    return false;
  }

  if (!countdown_to_start("MAG SETUP", "Pick up and rotate slowly.\nBig loops / figure-8.", 5000)) return false;
  if (!collect_mag_samples(MAG_TIMEOUT_MS)) return false;

  imu_cal::MagCalibration<float> mag_out;
  if (!magCal.fit(mag_out, /*robust_iters=*/3, /*trim_frac=*/0.15f)) {
    show_msg_wait_btn("MAG FAIL", "Fit failed.", "Rotate longer/wider.");
    return false;
  }

  // Build blob (ZERO IT to avoid padding weirdness)
  CalBlobV1 blob;
  memset(&blob, 0, sizeof(blob));
  blob.magic = IMU_CAL_MAGIC;
  blob.version = IMU_CAL_VERSION;
  blob.size_bytes = sizeof(CalBlobV1);

  // accel
  blob.accel_ok = acc_out.ok ? 1 : 0;
  blob.accel_g = acc_out.g;
  mat_to_rowmajor9(acc_out.S, blob.accel_S);
  blob.accel_T0 = acc_out.biasT.T0;
  blob.accel_b0[0]=acc_out.biasT.b0.x(); blob.accel_b0[1]=acc_out.biasT.b0.y(); blob.accel_b0[2]=acc_out.biasT.b0.z();
  blob.accel_k[0]=acc_out.biasT.k.x();   blob.accel_k[1]=acc_out.biasT.k.y();   blob.accel_k[2]=acc_out.biasT.k.z();
  blob.accel_rms_mag = acc_out.rms_mag;

  // gyro
  blob.gyro_ok = gyr_out.ok ? 1 : 0;
  blob.gyro_T0 = gyr_out.biasT.T0;
  blob.gyro_b0[0]=gyr_out.biasT.b0.x(); blob.gyro_b0[1]=gyr_out.biasT.b0.y(); blob.gyro_b0[2]=gyr_out.biasT.b0.z();
  blob.gyro_k[0]=gyr_out.biasT.k.x();   blob.gyro_k[1]=gyr_out.biasT.k.y();   blob.gyro_k[2]=gyr_out.biasT.k.z();

  // mag
  blob.mag_ok = mag_out.ok ? 1 : 0;
  mat_to_rowmajor9(mag_out.A, blob.mag_A);
  blob.mag_b[0]=mag_out.b.x(); blob.mag_b[1]=mag_out.b.y(); blob.mag_b[2]=mag_out.b.z();
  blob.mag_field_uT = mag_out.field_uT;
  blob.mag_rms = mag_out.rms;

  if (!save_cal_to_nvs(blob)) {
    show_msg_wait_btn("SAVE FAIL", "NVS write failed.");
    return false;
  }

  // VERIFY by reading back immediately (this is the key debug)
  have_blob = load_cal_from_nvs();
  if (!have_blob) {
    show_msg_wait_btn("SAVE FAIL", "Saved but readback failed.", "NVS/CRC mismatch.");
    return false;
  }

  // show results
  show_fit_results(acc_out, gyr_out, mag_out);
  return true;
}

